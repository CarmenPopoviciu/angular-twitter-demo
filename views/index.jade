extends layout

block body
  div(class='container', ng-controller='AppCtrl')
    div(class='center-block')
      img(src='http://codefront.io/public/images/sign.png', class='center-block')
      h2 Hello codefront.io!
    div(class='form-horizontal')
      div(class='search form-group')
        input(placeholder='Filter tweets', ng-model='search', class='form-control')
    div(class='media-list')
      div(ng-repeat="tweet in tweets | filter:search", class='list-group-item')
        div(class="media")
          a(class='pull-left')
            img(class="img-rounded media-object", ng-src='{{tweet.user.profile_image_url}}')
          div(class='media-body')
            h4(class="media-heading") 
              a(ng-href='http://twitter.com/{{tweet.user.screen_name}}') {{tweet.user.name}}

            {{tweet.text}}
            div
              button(class='btn btn-primary', ng-click='tweet.clicked = !tweet.clicked') More info
              div(class='info', ng-show='tweet.clicked') Language: {{tweet.lang}}, Retweeted: {{tweet.retweet_count}}
            div
              button(class="glyphicon glyphicon-trash", ng-click='deleteTweet($index)')


  script(src='/socket.io/socket.io.js')
  script(src='bower_components/angular/angular.js')
  script(src='bower_components/angular-route/angular-route.js')
  script(src='bower_components/angular-socket-io/socket.js')
  script(src='js/app.js')
  script(src='js/services.js')
  script(src='js/controllers.js')
  script(src='js/filters.js')
  script(src='js/directives.js')
